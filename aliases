alias pgrestart="pg_ctl restart -D $HOMEBREW_PREFIX/var/postgresql@14 -s -m fast -l $HOMEBREW_PREFIX/var/postgresql@14/server.log"
alias pgstatus="pg_ctl status -D $HOMEBREW_PREFIX/var/postgresql@14"
alias pgst="pg_ctl status -D $HOMEBREW_PREFIX/var/postgresql@14"

