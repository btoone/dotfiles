# Tmux
alias tma="tmux attach -t"
alias tmm="tmux attach || tmux"
# tmn - create new tmux session with working directory
# Usage: tmn foo       -> ~/code/foo
#        tmn ~/bar     -> ~/bar
#        tmn /abs/path -> /abs/path
tmn() {
  local input="${1:?Session name required}"
  local dir name
  case "$input" in
    /*|~*)
      dir="${input/#\~/$HOME}"
      name="${dir##*/}"
      ;;
    *)
      dir="$HOME/code/$input"
      name="$input"
      ;;
  esac
  mkdir -p "$dir"
  tmux new-session -s "$name" -c "$dir"
}
alias tml="tmux ls"
alias tmi="tmux info"
alias tmk="tmux kill-session -t"

