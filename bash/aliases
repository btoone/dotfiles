alias ht='history | tail -25'
alias ls='ls -pG'
# alias ls='ls -p --color=auto'   # uncomment for dir colors on linux
alias ll='ls -lph'
alias grep='GREP_COLOR="1;33;47" LANG=C grep --color=auto'
alias vi='vim -N'
alias vim='vim -N'
alias tree="find . -print | sed -e 's;[^/]*/;|____;g;s;____|; |;g'"

## git

alias eg='$EDITOR .git/config'
alias ga='git add'
alias gb='git branch'
alias gba='git branch -a'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gd='git diff'
alias gdm='git diff master'
alias gdn='git diff --name-status -r'
alias gds='git diff --stat -r'            # diffstat
alias gdt='git difftool -t opendiff -y'
alias gdv='git diff -w "$@" | vim -R -'
alias gexport='git archive --format zip --output'
alias gll='git log --graph --pretty=oneline --abbrev-commit'
alias glo="git log --stat"
alias glog='git log --oneline --graph --decorate'
alias glop="git log --pretty=oneline"
alias gnp="git-notpushed"
alias gp='git push'
alias gpl='git pull'
alias gr='git remote'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias grv='git remote -v'
alias gs='git status'
alias gui='open -a sourcetree .'
alias ungit="find . -name '.git' -exec rm -rf {} \;"

