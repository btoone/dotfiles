alias ht="history | tail -25"
alias ls="ls -pG"
# alias ls='ls -p --color=auto'                                                 # uncomment for dir colors on linux
alias ll="ls -lph"
alias tree="find . -print | sed -e 's;[^/]*/;|____;g;s;____|; |;g'"
alias hl="hl -i"

alias grep="grep --color=always -i"                                            # use colors; change to auto if causing problems
# alias g='grep' # I use git more often so it gets the 'g' alias
alias egrep="egrep --color=always -i"
alias ge='egrep'
alias less="less -R"                                                            # make less work with colors from grep
alias gal='alias | grep'

# process management
alias pgrep='pgrep -fil'

# vi
alias vi="vim -N"
alias vim="vim -N"

# tmux
alias tma="tmux attach -t"
alias tmm="tmux attach || tmux"
alias tmn="tmux new -s"
alias tml="tmux ls"

# git
alias g='git'
alias eg='$EDITOR .git/config'
alias ga='git add'
alias gb='git branch'
alias gba='git branch -a'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gd='git diff'
alias gdm='git diff master'
alias gdn='git diff --name-status -r'
alias gds='git diff --stat -r'            # diffstat
alias gdt='git difftool'
alias gdv='git diff -w "$@" | vim -R -'
alias gexport='git archive --format zip --output'
alias gll='git log --graph --pretty=oneline --abbrev-commit'
alias glo="git log --stat"
alias glog='git log --oneline --graph --decorate'
alias glop="git log --pretty=oneline"
alias gmt="git mergetool"
alias gnp="git-notpushed"
alias gp='git push'
alias gpl='git pull'
alias gr='git remote'
alias grv='git remote -v'
alias gs='git status'
alias gss='git status --short'
alias gui='open -a sourcetree .'
alias grm="git rm $(git ls-files --deleted)"      # stage deleted files - or just use `git add -u`

# bundler
alias b='bundle exec'
alias be='bundle exec'
alias bi='bundle install --path vendor'
alias binit='bundle init'
alias bu='bundle update'
alias biv='bundle install --path vendor'
alias bil='bundle install --path vendor --local'
alias bip="bundle install --path vendor && bundle package && echo 'vendor/ruby' >> .gitignore"

# rake
alias rr='bundle exec rake routes | $EDITOR'
alias rmig='bundle exec rake db:migrate && bundle exec rake db:test:prepare'

# rails
alias sc='script/console'
alias sd='script/dbconsole'
alias ss='script/server'
alias sg='script/generate'
alias tdl='tail -f log/development.log'
alias ttl='tail -f log/test.log'
alias scaffold='script/generate scaffold'
alias nscaffold='script/generate nifty_scaffold'
alias rst='touch tmp/restart.txt'
alias rc='bundle exec rails c'
alias rd='bundle exec rails dbconsole'
alias rg='bundle exec rails g'
alias rs='bundle exec rails s'
alias fs='bundle exec foreman start'
alias pryr='bundle exec pry -r ./config/environment -r rails/console/app -r rails/console/helpers'
alias r='~/bin/iterm $1'

# vagrant
alias v='vagrant'
alias vs='vagrant status'
alias vsh='vagrant ssh'
alias vup='vagrant up'
alias vhalt='vagrant halt'
alias vpro='vagrant provision'
alias vrel='vagrant reload'

# utility
alias reload='source ~/code/dotfiles/bashrc && echo Reloaded!'

# common
alias a='ls -A' # -A all except literal . ..
alias la="ls -A -l -G"
alias c='clear'
alias cdd='cd -'  # goto last dir cd'ed from
alias cl='clear; l'

alias cls='clear; ls'
alias h='heroku'
alias l.='ls -d .[^.]*'
alias ll.='ls -ld .[^.]*'
alias l='ls -lhGt'  # -l long listing, most recent first
                    # -G color
alias lh="ls -lh"
alias lt='ls -lt' # sort with recently modified first
alias md='mkdir -p'
alias s='cd ..'   # up one dir

alias e='exit'
alias k9="killall -9"

# finder
alias o='open . &'
alias ff='open -a Firefox'
alias evernote='open -a Evernote'

# processes
alias tu='top -o cpu' # cpu
alias tm='top -o vsize' # memory

# editor
alias ea="$EDITOR --wait ~/code/dotfiles/bash/aliases && reload"
alias ee="$EDITOR --wait ~/code/dotfiles/bash/env && reload"
alias et="$EDITOR"
alias ett="$EDITOR ."

# postgres
alias pgon="pg_ctl start -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log"
alias pgoff="pg_ctl stop -D /usr/local/var/postgres"
alias pgstatus="pg_ctl status -D /usr/local/var/postgres"
