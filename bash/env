# Environment Variables
export PATH="/usr/local/bin:$PATH"                                              # bin
export PATH="/usr/local/sbin:$PATH"                                             # sbin
export PATH="$HOME/bin:$PATH"                                                   # homebin
export PATH="/usr/local/mysql/bin:$PATH"                                        # mysql
export PATH="$HOME/.rbenv/bin:$PATH"                                            # rbenv
export PATH="/usr/local/share/npm/bin:$PATH"                                    # npm
export PATH="/usr/local/heroku/bin:$PATH"                                       # heroku
# export PATH=$PATH:$HOME/.rvm/bin                                              # rvm
export RUBYOPT=rubygems

# Editor
# export EDITOR='subl'
# export EDITOR='mate'
export EDITOR='vim'

# History
export HISTSIZE=10000
export HISTTIMEFORMAT='%F %T '
export HISTCONTROL=ignoredups

# directory listing colors
export CLICOLOR=1
export LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx    # dark backgrounds
# export LSCOLORS=ExFxCxDxBxegedabagacad    # light backgrounds

