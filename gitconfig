# vim: ft=gitconfig 
[user]
	name = Brandon Toone
	email = brandon@rdlk.co
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = always
[core]
	excludesfile = /Users/brandon/.gitignore_global
  editor = vim
[push]
	default = current
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[merge]
  tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
  prompt = false
[mergetool]
  prompt = false
[diff]
  tool = Kaleidoscope
