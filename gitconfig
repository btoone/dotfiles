# vim: ft=gitconfig
[init]
	defaultBranch = main
[push]
	autoSetupRemote = true
[color]
	ui = auto
[core]
	autocrlf = input
	editor = vim
	excludesfile = ~/.gitignore_global
[commit]
	template = ~/.gitmessage
[diff]
	colorMoved = zebra
[merge]
	# Enable if you have a fast-forward only merge strategy
	# ff = only
[alias]
	co = checkout
	cob = checkout -b
	ds = diff --staged
	dlc = diff --staged HEAD~1
	uncommit = reset --soft HEAD~1
	unstage = reset HEAD
	ls = log --stat

	# Delete branch locally and on remote
	rmb = !sh -c 'git branch -D $1 && git push origin --delete $1' -

	# Add all unstaged changes to previous commit
	caa = commit -a --amend -C HEAD

	# Add only the staged changes to previous commit
	csa = commit --amend -C HEAD

	# List all git aliases
	la = !git config -l | grep alias | cut -c 7-

	# List all remotes
	rem = !git config -l | grep -e ^remote.*url

	# Grep on filename. Usage: git f <pattern>
	f = !git ls-files | grep -i

	# Add files with long path. Usage: git long <pattern-in-full-path>
	long = "!f() { git add $(git ls-files -m | grep -i $1;) && git status; }; f"

    # Git log oneline with date and author (custom pretty format)
    hist = log --graph --decorate --pretty=format:'%C(yellow)%h%Creset - %Cgreen%ad%Creset %C(cyan)%an%Creset %C(bold blue)%d%Creset %s' --date=short

	# Undo commit(s). Files will be unstaged
	r = reset HEAD
	rr = reset HEAD~1
	rrr = reset HEAD~2 

	; lh = "!git log --pretty=format:'%s%d' --decorate=short --color=always | \
	; 	sed -E \
	; 		-e '/^\\*/ s/^(.*)$/\\x1b[1;37m\\1\\x1b[0m/' \
