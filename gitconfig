[core]
    excludesfile = ~/.gitignore_global
    editor = vim
[diff]
    tool = opendiff
[merge]
    tool = opendiff
[difftool "opendiff"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
[mergetool "opendiff"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true
